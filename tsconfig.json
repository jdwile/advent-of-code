{
  "extends": "./node_modules/gts/tsconfig-google.json",
  "compilerOptions": {
    "rootDir": "./utils",
    "outDir": "./build",
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "nodenext",
    "declaration": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "removeComments": false,
    "noImplicitAny": false,
    "esModuleInterop": true,
  },
  "include": [
    "utils/**/*.ts",
  ]
}